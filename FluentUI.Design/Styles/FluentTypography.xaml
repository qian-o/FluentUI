    <sys:Double x:Key="FontSizeBase300">14</sys:Double>
    <sys:Double x:Key="FontSizeBase400">16</sys:Double>
    <sys:Double x:Key="FontSizeBase500">20</sys:Double>
    <sys:Double x:Key="FontSizeBase600">24</sys:Double>
    <sys:Double x:Key="FontSizeHero700">28</sys:Double>
    <sys:Double x:Key="FontSizeHero800">32</sys:Double>
    <sys:Double x:Key="FontSizeHero900">40</sys:Double>
    <sys:Double x:Key="FontSizeHero1000">68</sys:Double>

    <FontWeight x:Key="FontWeightRegular">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightSemibold">Semibold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

    <sys:Double x:Key="LineHeightBase100">14</sys:Double>
    <sys:Double x:Key="LineHeightBase200">16</sys:Double>
    <sys:Double x:Key="LineHeightBase300">20</sys:Double>
    <sys:Double x:Key="LineHeightBase400">22</sys:Double>
    <sys:Double x:Key="LineHeightBase500">28</sys:Double>
    <sys:Double x:Key="LineHeightBase600">32</sys:Double>
    <sys:Double x:Key="LineHeightHero700">36</sys:Double>
    <sys:Double x:Key="LineHeightHero800">40</sys:Double>
    <sys:Double x:Key="LineHeightHero900">52</sys:Double>
    <sys:Double x:Key="LineHeightHero1000">92</sys:Double>

    <Style x:Key="Body1"
           TargetType="{x:Type FrameworkElement}">
        <Setter Property="TextElement.FontFamily"
                Value="{StaticResource FontFamilyBase}" />
        <Setter Property="TextElement.FontSize"
                Value="{StaticResource FontSizeBase300}" />
        <Setter Property="TextElement.FontWeight"
                Value="{StaticResource FontWeightRegular}" />
        <Setter Property="TextBlock.LineHeight"
